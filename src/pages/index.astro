	#hero .hero-image-wrapper {
		height: 100vh;
		background-size: cover;
		background-position: center;
		background-repeat: no-repeat;
		animation: slideBackgroundUp 1s ease-in-out forwards;
		/* filter: brightness(0.2); */
	}

	#hero .hero-content {
		padding-top: 10em;
	}

	#hero h1 {
		font-size: var(--font-size-4xl);
		text-wrap: wrap; /* better visual flow than balanced */
	}

	@media (max-width: 1279px) {
		#hero .hero-content {
			padding-right: 40%; /* Limit width on medium screens */
		}
	}

	@media (max-width: 768px) {
		#hero {
			display: block;
		}

		#hero .hero-content {
			padding-right: var(--space-lg); /* Reduce padding on mobile */
		}
	}
