---
import MainLayout from '../layouts/main-layout.astro';
import swedenBackground from '../assets/sweden-background.png';
---

<MainLayout>
	<section id="hero" class="flex flex-col">
		<div class="hero-image-wrapper" style={`background-image: url(${swedenBackground.src});`}>
			<div class="hero-content readable-width w-full">
				<h1>Keep your pack <em>tidy</em> for all of your adventures.</h1>

				<a href="https://tidytrek.co/register" rel="noopener noreferrer" class="cta-button" role="button">
					Sign Up Now
				</a>
			</div>
		</div>
	</section>
</MainLayout>

