---
import MainLayout from '../layouts/main-layout.astro';
---

<MainLayout title="404 - Page Not Found">
	<section id="fourohfour-hero" class="min-h-screen flex items-center justify-center">
		<div class="readable-width">
			<div class="message-box text-center">
				<div class="error-number">404</div>
				<h1>You went off trail!</h1>
				<p class="error-description">
					The page you were looking for wasn't found. Let's get you back on the right path.
				</p>
				<div class="error-actions">
					<a href="/" class="btn-primary" aria-label="Return to home page">Back Home</a>
					<a href="/#features" class="btn-outline">Explore Features</a>
				</div>
			</div>
		</div>
	</section>
</MainLayout>

<style>
	#fourohfour-hero {
		background-color: var(--color-bg-primary);
		padding: var(--space-8) 0;
	}

	.message-box {
		max-width: 500px;
		margin: 0 auto;
		padding: var(--space-8);
	}

	.error-number {
		font-size: 8rem;
		font-weight: 800;
		color: var(--color-primary);
		line-height: 1;
		margin-bottom: var(--space-4);
		letter-spacing: -0.05em;
	}

	.message-box h1 {
		font-size: 2.5rem;
		font-weight: 700;
		color: var(--color-text-primary);
		margin-bottom: var(--space-4);
		line-height: 1.2;
	}

	.error-description {
		font-size: var(--font-size-4);
		color: var(--color-text-secondary);
		margin-bottom: var(--space-8);
		line-height: 1.6;
	}

	.error-actions {
		display: flex;
		gap: var(--space-3);
		justify-content: center;
		flex-wrap: wrap;
	}

	/* Responsive adjustments */
	@media (max-width: 768px) {
		.error-number {
			font-size: 6rem;
		}

		.message-box h1 {
			font-size: 2rem;
		}

		.error-actions {
			flex-direction: column;
			align-items: center;
		}

		.error-actions a {
			width: 100%;
			max-width: 200px;
		}
	}
</style>
